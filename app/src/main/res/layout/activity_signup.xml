<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/signUpTopText"
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/sign_up_top_text"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <Button
        android:id="@+id/signUpAsTeacherButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="@string/teacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpTopText">
    </Button>
    <Button
        android:id="@+id/signUpAsStudentButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="@string/student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpTopText">
    </Button>
    <TextView
        android:id="@+id/UserRoleChoiceDisplay"
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/signUpAsTeacherButton"
        android:gravity="center"
        android:text="@string/roleDisplay"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <EditText
        android:id="@+id/newUsernameEditText"
        android:layout_width="300dp"
        android:layout_height="75dip"
        android:layout_marginStart="50dp"
        android:autofillHints="username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UserRoleChoiceDisplay"
        android:hint="@string/enter_your_new_username"
        android:gravity="center"
        android:inputType="text"
        >
    </EditText>
    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="75dip"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newUsernameEditText"
        android:hint="@string/enter_your_new_password"
        android:gravity="center"
        android:inputType="textPassword"
        android:autofillHints="password"
        >
    </EditText>
    <EditText
        android:id="@+id/confirmNewPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="75dip"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newPasswordEditText"
        android:hint="@string/confirm_your_password"
        android:gravity="center"
        android:inputType="textPassword"
        android:autofillHints="password"
        >
    </EditText>
    <Button
        android:id="@+id/confirmSignUpButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="@string/sign_up_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmNewPasswordEditText"
        android:layout_marginTop="75dp"
        >
    </Button>

    <Button
        android:id="@+id/GoBackToLogoutButton"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:text="@string/go_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmSignUpButton">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>