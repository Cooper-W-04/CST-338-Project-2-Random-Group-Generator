<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fce5cd"
    tools:context=".StudentViewSELECTEDClassActivity">


    <TextView
        android:id="@+id/titleViewSELECTEDClassesTextView"
        android:layout_width="383dp"
        android:layout_height="107dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Viewing Science 100"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/teacherNameTextView"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:text="Teacher"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleViewSELECTEDClassesTextView" />


    <TextView
        android:layout_width="231dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:text="teacher3"
        android:textSize="22sp"
        app:layout_constraintBaseline_toBaselineOf="@id/teacherNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@id/teacherNameTextView"
        app:layout_constraintTop_toBottomOf="@id/titleViewSELECTEDClassesTextView" />

    <Button
        android:id="@+id/goBackStudentLandingPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#adadad"
        android:text="Go Back"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teacherNameTextView"
        app:layout_constraintVertical_bias="0.924" />

    <androidx.cardview.widget.CardView
        android:id="@+id/studentGroupMember1CardView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#f9a54e"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/viewYourGroupMembersTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/studentGroupMember1TextView"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="student2"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/studentGroupMember2CardView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#f9a54e"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/studentGroupMember1CardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/studentGroupMember2TextView"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="student1"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/studentGroupMember3CardView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#f9a54e"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/studentGroupMember2CardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/studentGroupMember3TextView"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="student4"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:id="@+id/viewYourGroupMembersTextView"
        android:textAlignment="center"
        android:text="View Your Group Members"
        android:textStyle="italic"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/teacherNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/modifyPreferencesButton"
        android:layout_width="266dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#a2c4c9"
        android:text="Modify Preferences"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentGroupMember3CardView" />


</androidx.constraintlayout.widget.ConstraintLayout>